<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete</title>
</head>
<body>
    <div class="deleteForm">
        <h4>DELETE RESTAURANT</h4>
        <form action="/restaurants/delete?_method=DELETE" method="post">
            <div class="inputFields">
                <input type="text" name="id" placeholder="Enter ID no to delete" class="deleteParameter">
            </div>
            <div class="delete">
                <input type="submit" name="delete" value="Delete" class="deleteBtn">
            </div>
        </form>
    </div>
    <br><br>
     {{#if successMessage}}
    <div class="message" style="display:block;">
    {{successMessage}}
    </div>
    {{/if}}
    {{#if error}}
    <div class="error" style="display:block;">{{error}} </div>
    {{/if}}
</body>
</html>
